<h1>Listing charges</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Unique code</th>
      <th>Paid</th>
      <th>Refunded</th>
      <th>Owner type</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charges.each do |charge| %>
      <tr>
        <td><%= charge.amount %></td>
        <td><%= charge.unique_code %></td>
        <td><%= charge.paid %></td>
        <td><%= charge.refunded %></td>
        <td><%= charge.customer_type %></td>
        <td><%= charge.customer_id %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

